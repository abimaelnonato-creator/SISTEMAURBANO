# ===========================================
# Sistema de Gestão Urbana - Environment Config
# ===========================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=1

# Database - PostgreSQL with PostGIS
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sistmurbano?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# WhatsApp Business API (Meta)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# Email (for password recovery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Sistema Gestão Urbana <noreply@parnamirim.rn.gov.br>"

# Storage (for attachments)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# For S3/MinIO
# STORAGE_TYPE=s3
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=sistmurbano

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
